	<message id="210" type="CS" name="ReqSkillInfo" explain="请求坐骑技能列表">
		
	</message>

	<message id="211" type="CS" name="ReqChangeHorse" explain="骑乘状态更换坐骑">
		<field class="short" name="curlayer" explain="当前使用的坐骑阶层"></field>
	</message>


